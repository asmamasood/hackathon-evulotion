{
  "version": 2,
  "framework": "nextjs",
  "functions": {
    "app/**/*": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/app/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_BASE_URL": "https://your-backend-domain.com/api/v1",
    "NEXT_PUBLIC_BETTER_AUTH_URL": "https://your-backend-domain.com"
  },
  "builds": [
    {
      "src": "frontend/next.config.js",
      "use": "@vercel/next"
    }
  ],
  "regions": ["iad1", "sfo1", "cle1"]
}